@using MovieApp.ViewModels;
@model IEnumerable<ActorDTO>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.AvatarURL)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Biography)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.AvatarURL" alt="@item.FullName" style="max-width: 150px" />
                            </td>

                            <td class="align-middle">
                                @Html.DisplayFor(m => item.FullName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(m => item.Biography)
                            </td>
                            <td class="align-middle"><a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a></td>
                            <td class="align-middle"><a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a></td>
                            <td class="align-middle"><a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a></td>

                            </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>