@using MovieApp.ViewModels;
@model IEnumerable<ActorDTO>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(m => m.AvatarURL)</th>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Biography)</th>
                    <td><b>Actions</b></td>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.AvatarURL" alt="@item.FullName" style="max-width: 150px" />
                            </td>

                            <td class="align-middle">
                                @Html.DisplayFor(m => item.FullName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(m => item.Biography)
                            </td>
                            <td class="align-middle"><a class="btn btn-outline-primary" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a></td>
                                <td class="align-middle"><a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a></td>
                            <td class="align-middle"><a class="btn btn-danger" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a></td>
                            </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class=" text-white position-fixed bottom-0 end-0 m-4">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success d-flex align-items-center">Add New<i class="ms-2 bi-plus-circle mt-0 d-flex align-items-center"></i></a>
</div>