@using MovieApp.ViewModels;
@model IEnumerable<MovieDTO>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th><b>Image</b></th>
                    <th>@Html.DisplayNameFor(m => m.Title)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <td><b>Actions</b></td>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.ImageURLs.FirstOrDefault()" alt="@item.Title" style="max-width: 150px" />
                            </td>

                            <td class="align-middle">
                                @Html.DisplayFor(m => item.Title)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(m => item.Description)
                            </td>
                            <td class="align-middle"><a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a></td>
                            <td class="align-middle"><a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>